# ===========================================
# Agentic RAG Knowledge Assistant - Environment Configuration
# ===========================================
# Copy this file to .env and fill in your API keys

# ------------------------------------------
# REQUIRED: OpenAI Configuration
# ------------------------------------------
OPENAI_API_KEY=sk-your-openai-api-key-here

# ------------------------------------------
# REQUIRED: Pinecone Vector Database
# ------------------------------------------
PINECONE_API_KEY=your-pinecone-api-key-here
PINECONE_INDEX_NAME=rag-knowledge-base
PINECONE_ENVIRONMENT=us-east-1

# ------------------------------------------
# OPTIONAL: Neo4j Graph Database (for GraphRAG)
# ------------------------------------------
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password123

# ------------------------------------------
# OPTIONAL: Model Configuration
# ------------------------------------------
# OPENAI_MODEL=gpt-4o-mini
# OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# ------------------------------------------
# OPTIONAL: RAG Configuration
# ------------------------------------------
# SIMILARITY_THRESHOLD=0.5
# RETRIEVAL_K=5
# CHUNK_SIZE=1500
# CHUNK_OVERLAP=300

# ------------------------------------------
# OPTIONAL: Observability (Arize Phoenix)
# ------------------------------------------
# PHOENIX_ENABLED=true
